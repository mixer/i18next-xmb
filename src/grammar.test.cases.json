{
  "simple strings": {
    "input": "hello world!",
    "output": [{ "type": 0, "value": "hello world!" }]
  },
  "simple interpolations": {
    "input": "hello {{ name }}!",
    "output": [
      { "type": 0, "value": "hello " },
      { "type": 2, "value": "name" },
      { "type": 0, "value": "!" }
    ]
  },
  "unescaped interpolations": {
    "input": "hello {{- name }}!",
    "output": [
      { "type": 0, "value": "hello " },
      { "type": 1, "value": "name" },
      { "type": 0, "value": "!" }
    ]
  },
  "formmated interpolations": {
    "input": "hello {{ name, uppercase }}!",
    "output": [
      { "type": 0, "value": "hello " },
      { "type": 2, "value": "name", "format": "uppercase" },
      { "type": 0, "value": "!" }
    ]
  },
  "unescaped formatted interpolations": {
    "input": "hello {{- name, uppercase }}!",
    "output": [
      { "type": 0, "value": "hello " },
      { "type": 1, "value": "name", "format": "uppercase" },
      { "type": 0, "value": "!" }
    ]
  },
  "handles nesting": {
    "input": "hello $t(name)!",
    "output": [
      { "type": 0, "value": "hello " },
      { "type": 3, "value": "name" },
      { "type": 0, "value": "!" }
    ]
  },
  "ignores partial or unmatched elements": {
    "input": "hello $t(name {{!",
    "output": [{ "type": 0, "value": "hello $t(name {{!" }]
  },
  "handles multiple/simplifies empty": {
    "input": "{{ a }}{{- b }}$t(c){{ d, uppercase }}",
    "output": [
      { "type": 2, "value": "a" },
      { "type": 1, "value": "b" },
      { "type": 3, "value": "c" },
      { "type": 2, "value": "d", "format": "uppercase" }
    ]
  },
  "omits extra spaces as requested": {
    "input": "{{a}}{{-b}}$t(c){{d,uppercase}}",
    "output": [
      { "type": 2, "value": "a" },
      { "type": 1, "value": "b" },
      { "type": 3, "value": "c" },
      { "type": 2, "value": "d", "format": "uppercase" }
    ],
    "options": { "spaceAround": false }
  },
  "overides default replacements": {
    "input": "[ a ][{ b }](c)[ d% uppercase ]",
    "output": [
      { "type": 2, "value": "a" },
      { "type": 1, "value": "b" },
      { "type": 3, "value": "c" },
      { "type": 2, "value": "d", "format": "uppercase" }
    ],
    "options": {
      "prefix": "[",
      "suffix": "]",
      "nestingPrefix": "(",
      "nestingSuffix": ")",
      "unescapePrefix": "{",
      "unescapeSuffix": "}",
      "formatSeparator": "%"
    }
  }
}
